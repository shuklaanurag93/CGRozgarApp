<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/imgbg4"
    android:padding="3dp"
    tools:context=".user_signup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cmll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cm_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                   >

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/cm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cm_image"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="14.5sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/cmpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cm_name"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:padding="10dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/dcm_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    >

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/dcm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dcm_image"
                    android:text=""
                    android:includeFontPadding="false"
                    android:textColor="@color/black3"
                    android:textSize="14.5sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/dcm_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dcm_name"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="12sp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/dcm_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/black3"
                    android:textSize="11sp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/cglogo"
                        android:layout_width="250dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rozgarlogo">
                    </ImageView>

                    <TextView
                        android:id="@+id/logo_image"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="छत्तीसगढ़ रोज़गार ऐप"
                        android:textSize="22sp"
                        android:includeFontPadding="false"
                        android:textColor="@color/black3"
                        android:textStyle="bold"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo_image"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:layout_gravity="center"
                        android:text="रोज़गार एवं प्रशिक्षण छत्तीसगढ़"
                        android:textColor="@color/blue4"
                        android:textSize="13sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="पंजीयन"
                    android:includeFontPadding="false"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/blue4"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/userlogin_ll"
                    android:layout_width="match_parent"
                    android:gravity="center"
                   android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                       android:background="@drawable/forground2"
                        android:gravity="center_vertical"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/person"
                            app:tint="@color/black3">
                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="उपयोगकर्ता पंजीयन"
                            android:textColor="@color/black3"
                            android:textSize="18dp">


                        </TextView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue4"
                        android:text="आगे बढ़ने के लिए अपना आधार में दर्ज नाम तथा मोबाइल नंबर दर्ज करें"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/username_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:focusableInTouchMode="true"
                        android:hint="उपयोगकर्ता का नाम"
                        android:textColorHint="@color/blue4"
                        app:boxStrokeColor="@color/blue4"
                        app:boxStrokeWidthFocused="1dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue4"
                        android:textAllCaps="true"
                        app:hintTextColor="@color/blue4"
                        app:startIconDrawable="@drawable/name"
                        app:startIconTint="@color/blue4"
                        tools:override="true">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/username_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="true"
                            android:inputType="textCapCharacters"
                            android:textAllCaps="true"
                            android:maxLength="30"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@null" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobile_tv_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="मोबाइल नंबर "
                        android:textColorHint="@color/blue4"
                        app:boxStrokeColor="@color/blue4"
                        app:boxStrokeWidthFocused="1dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/white"
                        app:hintTextColor="@color/blue4"
                        app:startIconDrawable="@drawable/phone"
                        app:startIconTint="@color/blue4"
                        tools:override="true">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:textColor="@color/blue4"
                            android:textCursorDrawable="@null" />


                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/blue4"
                        android:text="जारी रखकर आप छत्तीसगढ़ ई-रोज़गार ऐप की उपयोग की शर्तों और गोपनीयता नीति से सहमत हैं |"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/captca_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:background="@color/white"
                        >

                            <CheckBox
                                android:id="@+id/cpatch_checkbox"
                                android:layout_width="wrap_content"
                                android:buttonTint="@color/blue4"
                                android:onClick="Check_checkBox"
                                android:hint="I'm not a robot/ मैं कोई रोबोट नहीं हूं "
                                android:textColorHint="@color/blue4"
                                android:layout_height="40dp">

                            </CheckBox>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:src="@drawable/recapch">

                            </ImageView>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/send_otp"
                        android:layout_width="230dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/login_btn"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ओटीपी प्राप्त करें"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:id="@+id/OTP_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/forground2"
                        android:gravity="center_vertical"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/key"
                            app:tint="@color/black3">

                        </ImageView>


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="ओटीपी"
                            android:textColor="@color/black3"
                            android:textSize="18dp">


                        </TextView>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/otp_txt_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/blue4"
                        android:text="मोबाइल नंबर में प्राप्त 4 अंको का ओटीपी दर्ज करें "
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/otp_res"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/txtcolor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <com.chaos.view.PinView
                            android:id="@+id/PinViewOTP"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:hint="OTP."
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/blue4"
                            android:textColorHint="@color/blue4"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:cursorColor="@color/blue4"
                            app:cursorWidth="1dp"
                            app:hideLineWhenFilled="false"
                            app:itemCount="4"
                            app:itemHeight="48dp"
                            app:itemRadius="5dp"
                            app:itemSpacing="10dp"
                            app:itemWidth="48dp"
                            app:lineColor="@color/blue4"
                            app:lineWidth="1dp"

                            app:viewType="rectangle" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Otp_submit"
                        android:layout_width="230dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_btn"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ओटीपी सबमिट करें"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="16sp">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mpin_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/forground2"
                        android:gravity="center_vertical"
                        android:padding="2dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/key"
                            app:tint="@color/black3">

                        </ImageView>


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="एम पिन"
                            android:textColor="@color/black3"
                            android:textSize="18dp">


                        </TextView>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/blue4"
                        android:text="4 अंको का एम पिन दर्ज कर पुष्टि करें "
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/signupmsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text=""
                        android:textColor="@color/blue4" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="एम पिन दर्ज करें"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textColor="@color/blue4" />

                        <com.chaos.view.PinView
                            android:id="@+id/PinViewMpin"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:hint="MPIN"
                            android:textColorHint="@color/blue4"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/blue4"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:cursorColor="@color/blue4"
                            app:cursorWidth="1dp"
                            app:hideLineWhenFilled="false"
                            app:itemCount="4"
                            app:itemHeight="48dp"
                            app:itemRadius="5dp"
                            app:itemSpacing="10dp"
                            app:itemWidth="48dp"
                            app:lineColor="@color/blue4"
                            app:lineWidth="1dp"

                            app:viewType="rectangle" />


                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="एम पिन पुनः दर्ज करें"
                            android:textColor="@color/blue4"
                            android:textStyle="bold" />

                        <com.chaos.view.PinView
                            android:id="@+id/PinViewCMpin"
                            style="@style/PinWidget.PinView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:hint="MPIN"
                            android:textColorHint="@color/blue4"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/blue4"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:cursorColor="@color/blue4"
                            app:cursorWidth="1dp"
                            app:hideLineWhenFilled="false"
                            app:itemCount="4"
                            app:itemHeight="48dp"
                            app:itemRadius="5dp"
                            app:itemSpacing="10dp"
                            app:itemWidth="48dp"
                            app:lineColor="@color/blue4"
                            app:lineWidth="1dp"
                            app:viewType="rectangle" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mpindone"
                        android:layout_width="260dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/login_btn"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="सबमिट करें"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="16sp">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>